extends layout

block content
  h1="Sign Up"
  div
    if errors
      each error in errors
        div.alert.alert-danger(role="alert")=error.msg
  hr
  form(class="col-lg-6" action='' method='POST')
    label(for='email') Email
    input(class="form-control" name='email' placeholder='Email' type='text' required)
    br
    label(for='username') Username
    input(class="form-control" name='username' placeholder='Username' type='text' required)
    br
    label(for='password') Password
    input(class="form-control" name='password' placeholder='Password' type='password' required)
    br
    label(for='password2') Confirm Password
    input(class="form-control" name='password2' placeholder='Password' type='password' required)
    br
    button(class="btn btn-primary form-control") Sign Up