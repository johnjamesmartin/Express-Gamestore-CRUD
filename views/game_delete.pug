extends layout

block content
  h1=title
  hr
  br
  h4(style="text-align: center")=`Are you sure you want to delete record (#${game_detail.id}) of ${game_detail.title}?`
  h6(style="text-align: center")="This action cannot be undone!"
  br
  br
  form(action=`/catalog/game/${game_detail.id}/delete` method='post')
    div(class="text-center")
      input.btn.btn-danger.col-lg-6(type='submit' value='Yes, delete record')
      br
      br
      a(href="/catalog/games")
        input.btn.btn-light.col-lg-6(type='button' value='No, cancel')
      br
     
  
