extends layout

block content
  h1=`${gameinstance_detail.game.title} (Â£${gameinstance_detail.price}) `
    span=" "
      a(href=`/catalog/gameinstance/${gameinstance_detail.id}/update`)
        button(class="mr-1 btn btn-sm btn-secondary")
          i(class="fa fa-edit")
      a(href=`/catalog/gameinstance/${gameinstance_detail.id}/delete`)
        button(class="btn btn-sm btn-danger")
          i(class="fa fa-trash-alt")
      h6(class="text-muted")=`${gameinstance_detail.console.toUpperCase()} /   ${gameinstance_detail.game.developerInfo.toUpperCase()} / ${gameinstance_detail.game.releaseYear}`
