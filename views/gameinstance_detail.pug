  div(class="col-lg-6" style="border: 0px solid red;")
    ul(class="list-group list-group-flush")
      each descriptor in gameinstance_detail.description.split("---")
        li(class="list-group-item")=descriptor
  br
  br
  small(class="text-muted" style="font-size: 9px")=`Manufacturer ID: ${gameinstance_detail.game.developer}`
