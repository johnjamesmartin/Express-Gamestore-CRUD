extends layout

block content
  h1= title
  hr
  h2=`${gameinstance_detail.game.title} (Â£${gameinstance_detail.price}) `
    span
      a(href=`/catalog/gameinstance/${gameinstance_detail.id}/delete`)
        button(class="btn btn-sm btn-danger")
          i(class="fa fa-trash-alt")
  h6(class="text-muted")=`${gameinstance_detail.console.toUpperCase()} /   ${gameinstance_detail.game.developerInfo.toUpperCase()} / ${gameinstance_detail.game.releaseYear}`
  br
  p=`Description:`
    ul(class="list-group list-group-flush")
      each descriptor in gameinstance_detail.description.split("---")
        li(class="list-group-item")=descriptor
  br
  small(class="text-muted")=`Manufacturer ID: ${gameinstance_detail.game.developer}`
  br
  small(class="text-muted")=`Product ID: ${gameinstance_detail.id}`