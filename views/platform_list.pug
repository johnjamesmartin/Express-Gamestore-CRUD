extends layout

block content
  h1= title
  table(class="table table-striped")
    thead
      tr
        th="Console Name"
        th="Manufacturer"
        th="Medium"
    tbody
      each platform in platform_list
        tr
          td
            a(href=`/catalog/platform/${platform.id}`)=platform.consoleName
          td=platform.manufacturerName
          td=platform.medium