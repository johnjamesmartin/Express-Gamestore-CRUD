extends layout

block content
  h1=title
  form(action=`/catalog/gameinstance/create` method='post')
    hr
    label(for="game")="Game title:"
    select.form-control.col-lg-6(name="game")
      each game in list_games
        option=game.title
    br
    label(for="description")="Description:"
    textarea.form-control.col-lg-6(name="description" placeholder="Describe the product and its condition here")
    br
    label(for="price")="Price (in Â£):"
    input.form-control.col-lg-6(name="price" type="number" min="0.00" max="10000000.00" step="0.01" value="10.00")
    br
    label(for="numberInStock")="Number in stock (set to 1 unless multiple near-identifical copies):"
    input.form-control.col-lg-6(name="numberInStock" type="number" min="0" step="1" value="1")
    br
    input.form-control.btn.btn-primary.col-lg-6(type='submit' value='Submit')
    br